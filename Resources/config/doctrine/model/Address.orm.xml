<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="IR\Bundle\AddressBundle\Model\Address">          
        <field name="firstName" column="first_name" type="string" length="255" />
        
        <field name="lastName" column="last_name" type="string" length="255" />
        
        <field name="companyName" column="company_name" type="string" length="255" nullable="true" />        

        <field name="street" column="street" type="string" length="255" />
        
        <field name="division" column="division" type="string" length="255" nullable="true" />
        
        <field name="postalCode" column="postal_code" type="string" length="255" nullable="true" />
        
        <field name="city" column="city" type="string" length="255" />
        
        <field name="country" column="country" type="string" length="2" />
                
        <field name="homePhone" column="home_phone" type="string" length="255" nullable="true" />
        
        <field name="mobilePhone" column="mobile_phone" type="string" length="255" nullable="true" />
        
        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>                  
    </mapped-superclass>
    
</doctrine-mapping>