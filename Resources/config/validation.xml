<?xml version="1.0" encoding="UTF-8" ?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="IR\Bundle\AddressBundle\Model\Address">
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="message">ir_address.address.first_name.not_blank</option> 
                <option name="groups">Address</option>                       
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">ir_address.address.first_name.min_length</option>
                <option name="maxMessage">ir_address.address.first_name.max_length</option> 
                <option name="groups">Address</option>                     
            </constraint>
        </property>  
        
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="message">ir_address.address.last_name.not_blank</option> 
                <option name="groups">Address</option>                            
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">ir_address.address.last_name.min_length</option>
                <option name="maxMessage">ir_address.address.last_name.max_length</option>
                <option name="groups">Address</option>                               
            </constraint>
        </property>

        <property name="street">
            <constraint name="NotBlank">
                <option name="message">ir_address.address.street.not_blank</option>
                <option name="groups">Address</option>                 
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">ir_address.address.street.min_length</option>
                <option name="maxMessage">ir_address.address.street.max_length</option>
                <option name="groups">Address</option>                              
            </constraint>            
        </property>   

        <property name="city">
            <constraint name="NotBlank">
                <option name="message">ir_address.address.city.not_blank</option>
                <option name="groups">Address</option>              
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">ir_address.address.city.min_length</option>
                <option name="maxMessage">ir_address.address.city.max_length</option>
                <option name="groups">Address</option>                                  
            </constraint>              
        </property>    
        
        <property name="country">
            <constraint name="NotBlank">
                <option name="message">ir_address.address.country.not_blank</option>
                <option name="groups">Address</option>                
            </constraint>
        </property>         
    </class>    

</constraint-mapping>        